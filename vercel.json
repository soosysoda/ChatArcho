{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)\\.(js|css|html|ico)",
            "dest": "/public/$1.$2"
        },
        { "src": "/(.*)", "dest": "/server.js" }
    ]
}